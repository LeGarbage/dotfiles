#
# ~/.bashrc
#

# If not running interactively, don't do anything
[[ $- != *i* ]] && return

alias ls='ls --color=auto'
alias grep='grep --color=auto'
alias vim='nvim'

# Safety aliases
alias rm='rm -I'
alias mv='mv -i'
alias cp='cp -i'
alias ln='ln -i'

# Use nvim as manpager
export MANPAGER="nvim +Man!"

# Options
shopt -s autocd
shopt -s cdspell
shopt -s globstar

# Use vim motions
set -o vi

# Enable direnv
eval "$(direnv hook bash)"

# Enable starship
eval "$(starship init bash)"
